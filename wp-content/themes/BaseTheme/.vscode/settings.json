	"[php]": {
		"editor.formatOnSave": false,
		"editor.formatOnPaste": false,
		"editor.defaultFormatter": "rifi2k.format-html-in-php",
	},
	// PHP CS
	"phpcs.enable": true,
	"phpcs.executablePath": "C:/Users/benna/AppData/Roaming/Composer/vendor/bin/phpcs.bat",
	"phpcs.standard": "./phpcs.xml.dist",
	// PHP CBF
	"phpcbf.enable": true,
	"phpcbf.executablePath": "C:/Users/benna/AppData/Roaming/Composer/vendor/bin/phpcbf.bat",
	"phpcbf.onsave": true,
	"phpcbf.documentFormattingProvider": true,
	"phpcbf.standard": "./phpcs.xml.dist",
	// PHP Files.
	"saveAndRun": {
		"commands": [
			// {
			// 	"match": "\\.php$",
			// 	"cmd": "phpcbf --standard='WordPress' ${file}",
			// 	"silent": true
			// },
			{
				"match": "\\.css$",
				"cmd": "stylelint ${file} --fix",
				"silent": true
			},
			{
				"match": "\\.scss$",
				"cmd": "stylelint ${file} --fix",
				"silent": true
			},
			// {
			// 	"match": "\\.js$",
			// 	"cmd": "eslint ${file} --fix",
			// 	"silent": true
			// }
		]
	},
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/vendor": true,
		"**/.vscode": true
	},
	//"files.eol": "\n",
	"css.validate": false,
	"less.validate": false,
	"scss.validate": false,
	"eslint.alwaysShowStatus": true,
	// "eslint.autoFixOnSave": true,
	"javascript.validate.enable": false,
	"terminal.integrated.shellArgs.windows": [
		"-ExecutionPolicy",
		"Bypass"
	],
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},

}
